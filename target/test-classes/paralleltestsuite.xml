<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Parallel Cross Browser Suite" parallel="tests" thread-count="3" verbose="1">
    
     <listeners>
        <listener class-name="utilities.ExtentTestListener"/>
    </listeners>

    <!-- Chrome -->
    <test name="Chrome Test">
        <parameter name="browser" value="chrome"/>
        <!--<parameter name="os" value="windows"/>-->

        <classes>
            <!--<class name="testcases.RegisterMandatoryFieldsTest"/>-->
            <class name="testcases.RegisterAllFieldsTest"/>
        </classes>
    </test>

    <!-- Edge -->
    <test name="Edge Test">
        <parameter name="browser" value="edge"/>
       <!--<parameter name="os" value="windows"/>-->

        <classes>
            <!--<class name="testcases.RegisterMandatoryFieldsTest"/>-->
            <class name="testcases.RegisterAllFieldsTest"/>
        </classes>
    </test>

    <!-- Firefox -->
    <test name="Firefox Test">
        <parameter name="browser" value="firefox"/>
        <!--<parameter name="os" value="windows"/>-->

        <classes>
            <!--<class name="testcases.RegisterMandatoryFieldsTest"/>-->
            <class name="testcases.RegisterAllFieldsTest"/>
        </classes>
    </test>

</suite>
