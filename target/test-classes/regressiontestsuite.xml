<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Regression Suite" verbose="1">

    <listeners>
        <listener class-name="utilities.ExtentTestListener"/>
    </listeners>
   

    <!-- Chrome -->
    <test name="Regression - Chrome">
        <parameter name="browser" value="chrome"/>
      
        <classes>
            <class name="registertests.RegisterMandatoryFieldsTest"/>
            <class name="registertests.RegisterAllFieldsTest"/>
           
        </classes>
    </test>

    <!-- Firefox -->
    <test name="Regression - Firefox">
        <parameter name="browser" value="firefox"/>
     
        <classes>
            <class name="registertests.RegisterMandatoryFieldsTest"/>
            <class name="registertests.RegisterAllFieldsTest"/>
        </classes>
    </test>

    <!-- Edge -->
    <test name="Regression - Edge">
        <parameter name="browser" value="edge"/>
        
               
        <classes>
            <class name="registertests.RegisterMandatoryFieldsTest"/>
            <class name="registertests.RegisterAllFieldsTest"/>
        </classes>
    </test>

</suite>
